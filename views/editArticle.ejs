<%- include('./components/header') %>

<form method="POST" action='/edit-article/<%=result._id%>'>
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name='title' value="<%= result.title %>" class="form-control" id="title" aria-describedby="emailHelp">
      <% if(err.title) {%>
        <p class="error"><%= err.title.message%></p>
      <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label">Article</label>
      <textarea name='article' class="form-control" id="article"><%= result.article %></textarea>
      <% if(err.article) {%>
        <p class="error"><%= err.article.message%></p>
      <% } %>
    </div>

    <a href="/article/<%=result._id%>" class="btn btn-warning">Cancel</a>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include('./components/footer') %>